<!-- ProjectoEsw.Models.Identity.Perfil -->
@model ProjectoEsw.Models.Identity.RegisterViewModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<div class="jumbotron col-sm-10 col-sm-offset-1">
    <div class="container col-lg-offset-2 col-sm-8">
        <h2 class="text-center">Editar Perfil</h2>
        <form class="form-horizontal" asp-controller="UtilizadorRegistado" asp-action="EditarPerfil" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class=" help-block"></div>
                <input asp-for="Email" placeholder="Novo Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Morada" placeholder="Novo Numero de Telefone" class="form-control" />
                <span asp-validation-for="Morada" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Telefone" placeholder="Nova Morada" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
                <div class=" help-block"></div>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <button type="submit" class="btn btn-default">Alterar</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="jumbotron col-sm-10 col-sm-offset-1">
    <div class="container col-lg-offset-2 col-sm-8">
        <h2 class="text-center">Alterar Password</h2>
        <form class="form-horizontal" asp-controller="UtilizadorRegistado" asp-action="EditarPerfil" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class=" help-block"></div>
                <input asp-for="Password" placeholder="Nova Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="ConfirmPassword" placeholder="Confirmar Nova Password" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <div class=" help-block"></div>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <button type="submit" class="btn btn-default">Alterar</button>
                </div>
            </div>
        </form>
    </div>
</div>