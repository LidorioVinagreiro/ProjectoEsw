<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectoEsw</title>
        
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/fullcalendar/dist/fullcalendar.css" rel="stylesheet" />
    <link href="~/lib/fullcalendar/dist/fullcalendar.print.css" rel="stylesheet" media="print" />
    <link href="~/css/site.css" rel="stylesheet"/>
    <link href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />

    
    <script src="~/lib/moment/moment.js"></script>       
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/fullcalendar/dist/fullcalendar.js"></script>
    <script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    
    
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle="popover"]').popover();
        });
    </script>
    
</head>
<body>
    <div class="container">
        <div class="row">
            @*dei lhe um col offset e col sm*@
            <div class="col-sm-offset-8 col-sm-4">
                @RenderSection("links", required: true)                
            </div>
            @*sm to xs*@
            <div class="col-xs-2">
                <div class="sidebar-nav">
                    <img src="~/images/LogoIpsFinal.png" />
                    <div class="help-block"></div>
                    <div class="navbar" role="navigation">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <span class="visible-xs navbar-brand">Sidebar menu</span>
                        </div>
                        <!-- render section fazer-->
                        <div class="well text-center" role="button">
                            @RenderSection("Home", required: true)
                        </div>  
                        <div class="well text-center" role="button">
                            Programas Mobilidade
                        </div>
                        <div class="well text-center" role="button">
                            Bolsas
                        </div>
                        <div class="well text-center" role="button">
                            Sobre Nós
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-10">
                <div class="help-block"></div>               
                @RenderBody()
                @RenderSection("Calendario", false)
            </div>
        </div>
    </div>

    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; 2017 - ProjectoEsw</p>
        </footer>
    </div>


    @RenderSection("Scripts", required: false)
</body>
</html>
