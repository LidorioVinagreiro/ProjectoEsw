<form class="form-horizontal" asp-controller="Tecnico" method="POST">
    <div class="jumbotron col-sm-8">
        <div class="form-group">
            <h2 class=" text-center">Candidatura Submetida</h2>
            <input id="ID" name="ID" type="hidden" value="@Model.ID">
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.NomeCompleto" class="col-sm-4 control-label"></label>
