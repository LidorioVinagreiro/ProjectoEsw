<!-- ProjectoEsw.Models.Identity.Perfil -->
@model ProjectoEsw.Models.Identity.RegisterViewModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@section links {
    <a asp-area="" asp-controller="Candidato" asp-action="Perfil" class="btn btn-link btn-xs pull-right"> @Html.DisplayFor(model => model.Email) </a>
    <a asp-area="" asp-controller="Candidato" asp-action="Logout" class="btn btn-link btn-xs pull-right">Log Out</a>
    <a asp-area="" asp-controller="Home" asp-action="Login" class="btn btn-link btn-xs pull-right">Login</a>
}

<div class="jumbotron col-sm-7 col-sm-offset-1">
    <div class="container col-lg-offset-1 col-sm-10">
        <h2 class="text-center">Editar Perfil</h2>
        <form class="form-horizontal" asp-controller="Candidato" asp-action="EditarPerfil" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class=" help-block"></div>
                <input asp-for="Email" placeholder="Novo Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Morada" placeholder="Novo Morada" class="form-control" />
                <span asp-validation-for="Morada" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Telefone" placeholder="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
                <div class=" help-block"></div>
                <div class="form-inline">
                    <h5 class="pull-left">Foto</h5>
                    <input type="file" name="files" class="pull-right" />
                   
                </div>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <button type="submit" class="btn btn-default">Alterar</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="jumbotron col-sm-3 col-sm-offset-1">
    <h5 class="text-center">Opcoes</h5>
    <a asp-area="" asp-controller="Candidato" asp-action="Index" class="btn btn-link btn-xs pull-right col-sm-12">Ver Perfil</a>
    <a asp-area="" asp-controller="Candidato" asp-action="Perfil" class="btn btn-link btn-xs center-block col-sm-12">Editar Perfil</a>
</div>
<div class="jumbotron col-sm-7 col-sm-offset-1">
    <div class="container col-lg-offset-1 col-sm-10">
        <h2 class="text-center">Alterar Password</h2>
        <form class="form-horizontal" asp-controller="Candidato" asp-action="AlterarPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class=" help-block"></div>
                <input asp-for="Password" placeholder="Nova Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="ConfirmPassword" placeholder="Confirmar Nova Password" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <div class=" help-block"></div>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <button type="submit" class="btn btn-default">Alterar</button>
                </div>
            </div>
        </form>
    </div>
</div>