@model ProjectoEsw.Models.Identity.Perfil;
@inject ProjectoEsw.GestorAplicacao.Gestor gestor;

@section links {
    <a asp-area="" asp-controller="Candidato" asp-action="Logout" class="btn btn-link btn-xs pull-right">Log Out</a>
    <a asp-area="" asp-controller="Candidato" asp-action="perfil" class="btn btn-link btn-xs pull-right"> @Html.DisplayFor(model => model.Email) </a>
}
@section Home {
    <a asp-area="" asp-controller="Candidato" asp-action="Index">Home</a>
}
@section ProgramasMobilidade{
    <a asp-area="" asp-controller="Candidato" asp-action="ProgramasMobilidade">Programas Mobilidade</a>
}
@section Bolsas{
    <a asp-area="" asp-controller="Candidato" asp-action="Bolsas">Bolsas</a>
}
@section SobreNos{
    <a asp-area="" asp-controller="Candidato" asp-action="SobreNos">Sobre Nós</a>
}
<div class="jumbotron col-sm-8">
    <h2 class=" text-center" style="padding-bottom:5px;">Perfil do Candidato</h2>
    <div>
        <label asp-for="NomeCompleto" class="col-sm-6 control-label text-right"></label>
        <h5 class="col-sm-offset-6 control-label">@Model.NomeCompleto</h5>      
    </div>
    <div>
        <label asp-for="DataNasc" class="col-sm-6 control-label text-right"></label>
        <h5 class="col-sm-offset-6">@Model.DataNasc.Date.ToShortDateString()</h5>
        
    </div>
    <div>
        <label asp-for="Genero" class="col-sm-6 control-label text-right" ></label>
        <h5 class="col-sm-offset-6"> @Model.Genero</h5>  
    </div>
    <div>
        <label asp-for="Nacionalidade" class="col-sm-6 control-label text-right"></label>
        <h5 class="col-sm-offset-6">@Model.Nacionalidade</h5>
    </div>
    <div>
        <label asp-for="MoradaRua" class="col-sm-6 control-label text-right"></label>
        <h5 class="col-sm-offset-6">@Model.MoradaRua</h5>
    </div>
    <div>
        <label asp-for="MoradaCodigoPostal" class="col-sm-6 control-label text-right"></label>
        <h5 class="col-sm-offset-6"> @Model.MoradaCodigoPostal</h5>
    </div>
    <div>
        <label asp-for="MoradaConcelho" class="col-sm-6 control-label text-right"></label>
        <h5 class="col-sm-offset-6">@Model.MoradaConcelho </h5>
    </div>
    <div>
        <label asp-for="MoradaDistrito" class="col-sm-6 control-label text-right"></label>
        <h5 class="col-sm-offset-6">@Model.MoradaDistrito</h5>
    </div>
    <div>
        <label asp-for="Email" class="col-sm-6 control-label text-right"></label>
        <h5 class="col-sm-offset-6">@Model.Email</h5>
    </div>
    <div>
        <label asp-for="Nif" class="col-sm-6 control-label text-right"></label>
        <h5 class="col-sm-offset-6">@Model.Nif</h5>
    </div>
    <div>
        <label asp-for="NumeroIdentificacao" class="col-sm-6 control-label text-right"></label> 
        <h5 class="col-sm-offset-6">@Model.NumeroIdentificacao</h5>
    </div>
    <div>
        <label asp-for="Telefone" class="col-sm-6 control-label text-right"></label>
            <h5 class="col-sm-offset-6">@Model.Telefone</h5>
    </div>
    <div>
        <label asp-for="Foto" class="col-sm-6 control-label text-right"></label>
        <div class="col-sm-offset-6">
            @{
                try
                {     
                    <img src="@Url.Content(gestor.getImagePath(gestor.getUtilizadorByPerfilId(Model.ID)))" alt="logo" width="200" height="200" />
                }
                catch
                {    
                    <img src="~/images/default_profile.jpg" />
                }
               
            }
     </div>
    </div>
</div>
<div class="jumbotron col-sm-3 col-sm-offset-1">
    <h5 class="text-center">Opcoes</h5>
    <a asp-area="" asp-controller="Candidato" asp-action="VisualizarCandidatura" class="btn btn-link btn-xs pull-right col-sm-12">Ver Candidatura</a>
    <a asp-area="" asp-controller="Candidato" asp-action="Perfil" class="btn btn-link btn-xs pull-right col-sm-12">Ver Perfil</a>
    <a asp-area="" asp-controller="Candidato" asp-action="EditarPerfil" class="btn btn-link btn-xs center-block col-sm-12">Editar Perfil</a>
</div>
