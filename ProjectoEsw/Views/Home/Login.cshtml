@inject ProjectoEsw.GestorAplicacao.GestorAjudas gestorAjudas;
@model ProjectoEsw.Models.Identity.LoginViewModel;

@section links {
    <a asp-area="" asp-controller="Home" asp-action="RecuperarPassword" class="btn btn-link btn-xs pull-right">Recuperar Password</a>
    <a asp-area="" asp-controller="Home" asp-action="Register" class="btn btn-link btn-xs pull-right">Registar</a>
    <a asp-area="" asp-controller="Home" asp-action="Login" class="btn btn-link btn-xs pull-right">Login</a>
    @Html.ActionLink("home", "login", "algo");

}

<div class="jumbotron col-sm-10 col-sm-offset-1">
    <span class="glyphicon glyphicon-question-sign" data-toggle="popover" data-trigger="hover" data-content= "@gestorAjudas.BuscarAjudaPagina("Home.Login").Descricao"></span>
    <div class="container col-lg-offset-2 col-sm-8">
        <h2 class="text-center">Login</h2>
        <form class="form-horizontal" asp-controller="Home" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class=" help-block"></div>
                <input asp-for="Email" placeholder="Email" class="form-control"  data-toggle="popover" data-trigger="hover" data-content= "@gestorAjudas.BuscarAjudaCampo("Home.Login","Email").Descricao"/>
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Password" placeholder="Password" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.Login","Password").Descricao">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Sign in</button>
                <a asp-area="" asp-controller="Home" asp-action="RecuperarPassword" class="btn btn-link btn-xs">Recuperar Password</a>
            </div>
        </form>
    </div>
    </div>