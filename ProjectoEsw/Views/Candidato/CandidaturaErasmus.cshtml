@using ProjectoEsw.Models.Identity;
@inject ProjectoEsw.GestorAplicacao.GestorAjudas gestorAjudas
@inject ProjectoEsw.Models.AplicacaoDbContexto context
@model ProjectoEsw.Models.Candidatura.Candidatura;

@section links {
    <a asp-area="" asp-controller="Candidato" asp-action="Logout" class="btn btn-link btn-xs pull-right">Log Out</a>
    <a asp-area="" asp-controller="Candidato" asp-action="Perfil" class="btn btn-link btn-xs pull-right"> @Html.DisplayFor(Model => Model.Candidato.Perfil.Email) </a>

}
@section Home{
    <a asp-area="" asp-controller="Candidato" asp-action="Index">Home</a>

}
@section ProgramasMobilidade{
    <a asp-area="" asp-controller="Candidato" asp-action="ProgramasMobilidade">Programas Mobilidade</a>
}
@section Bolsas{
    <a asp-area="" asp-controller="Candidato" asp-action="Bolsas">Bolsas</a>
}
@section SobreNos{
    <a asp-area="" asp-controller="Candidato" asp-action="SobreNos">Sobre Nós</a>
}

<div class="jumbotron col-sm-7 col-sm-offset-1">
    <span class="glyphicon glyphicon-question-sign" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaPagina("Home.EditarPerfil").Descricao"></span>
    <div class="container col-lg-offset-1 col-sm-10">
        <h2 class="text-center">Candidatura Erasmus+</h2>
        <form class="form-horizontal" asp-controller="Candidato" asp-action="Candidatura" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <p>Dados Pessoais</p>
                <input asp-for="Candidato.Perfil.NomeCompleto" placeholder="Nome Completo" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo NIF").Descricao" />
                <span asp-validation-for="Candidato.Perfil.NomeCompleto" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Candidato.Perfil.DataNasc" placeholder="Data de Nascimento" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo NIF").Descricao" />
                <span asp-validation-for="Candidato.Perfil.DataNasc" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Candidato.Perfil.Email" placeholder="Email" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo NIF").Descricao" />
                <span asp-validation-for="Candidato.Perfil.Email" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Candidato.Perfil.Nif" placeholder="Numero de Identificação Fiscal" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo NIF").Descricao" />
                <span asp-validation-for="Candidato.Perfil.Nif" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Candidato.Perfil.NumeroIdentificacao" placeholder="Numero de Identificação" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo Numero Identificação").Descricao" />
                <span asp-validation-for="Candidato.Perfil.NumeroIdentificacao" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Candidato.Perfil.MoradaRua" placeholder="Rua da Morada" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Nova Morada Rua").Descricao" />
                <span asp-validation-for="Candidato.Perfil.MoradaRua" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Candidato.Perfil.MoradaCodigoPostal" placeholder="Codigo Postal da Morada" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Nova Morada Codigo Postal").Descricao" />
                <span asp-validation-for="Candidato.Perfil.MoradaCodigoPostal" class="text-danger"></span>
                <div class=" help-block"></div>
                <select asp-for="Candidato.Perfil.Nacionalidade" asp-items="Html.GetEnumSelectList<Nacionalidade>()" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Nova Morada Concelho").Descricao">
                    <option value="0">Escolha a Nacionalidade</option>
                </select><span asp-validation-for="Candidato.Perfil.Nacionalidade" class="text-danger"></span>
                <div class=" help-block"></div>
                <select asp-for="Candidato.Perfil.MoradaConcelho" asp-items="Html.GetEnumSelectList<Concelho>()" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Nova Morada Concelho").Descricao">
                    <option value="0">Escolha o Concelho</option>
                </select>
                <span asp-validation-for="Candidato.Perfil.MoradaConcelho" class="text-danger"></span>
                <div class=" help-block"></div>
                <select asp-for="Candidato.Perfil.MoradaDistrito" asp-items="context." class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Nova Morada Distrito").Descricao">
                    <option value="0">Escolha o Distrito</option>
                </select>
                <span asp-validation-for="Candidato.Perfil.MoradaDistrito" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Candidato.Perfil.Telefone" placeholder="O seu Telefone" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo Telefone").Descricao" />
                <span asp-validation-for="Candidato.Perfil.Telefone" class="text-danger"></span>
                <div class=" help-block"></div>

                <p> Dados para casos de emergencia</p>
                <div class=" help-block"></div>

                <input asp-for="NomeEmergencia" placeholder="Nome da pessoa a contactar" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo Numero Identificação").Descricao" />
                <span asp-validation-for="NomeEmergencia" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Afiliacao" placeholder="Afiliação" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo Numero Identificação").Descricao" />
                <span asp-validation-for="Afiliacao" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="telefone" placeholder="Telefone do contacto de emergencia" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo Numero Identificação").Descricao" />
                <span asp-validation-for="telefone" class="text-danger"></span>
                <div class=" help-block"></div>

                <p> Dados para Candidatura</p>
                <div class=" help-block"></div>

                <input asp-for="Escola" placeholder="Nome da Escola" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo Numero Identificação").Descricao" />
                <span asp-validation-for="Escola" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="CursoFrequentado" placeholder="Curso" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo Numero Identificação").Descricao" />
                <span asp-validation-for="CursoFrequentado" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="AnoCurricular" placeholder="Seu ano curricular" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo Numero Identificação").Descricao" />
                <span asp-validation-for="AnoCurricular" class="text-danger"></span>
                <div class=" help-block"></div>
                <select asp-for="InstituicoesFrequentar" asp-items="Html.GetEnumSelectList<Concelho>()" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Nova Morada Concelho").Descricao">
                    <option value="0">Escolha a Instituicao</option>
                </select>
                <div class=" form-inline">
                    <h5>Deseja Candidatar-se a bolsa? </h5>
                    <input asp-for="Bolsa" placeholder="Seu ano curricular" class="form-control" data-toggle="popover" data-trigger="hover" data-content="@gestorAjudas.BuscarAjudaCampo("Home.EditarPerfil","Novo Numero Identificação").Descricao" />
                    <div class=" help-block"></div>
                </div>

                <div class="form-inline">
                    <h5 class="pull-left">Carta Motivação</h5>
                    <input type="file" name="files" class="pull-right" />
                </div>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <button type="submit" class="btn btn-default">Cancelar</button>
                    <button type="submit" class="btn btn-default">Proximo</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="jumbotron col-sm-3 col-sm-offset-1">
    <h5 class="text-center">Opcoes</h5>
    <a asp-area="" asp-controller="Candidato" asp-action="Perfil" class="btn btn-link btn-xs pull-right col-sm-12">Ver Perfil</a>
    <a asp-area="" asp-controller="Candidato" asp-action="EditarPerfil" class="btn btn-link btn-xs center-block col-sm-12">Editar Perfil</a>
    <a class="btn btn-link btn-xs center-block col-sm-12">Candidatura</a>
</div>