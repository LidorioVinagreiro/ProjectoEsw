@model ProjectoEsw.Models.Calendario.Eventos;

<script> CriarCalendario("Candidato")</script>
<div class="col-sm-offset-1 col-sm-3">
    <div id="calendar"></div>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><span id="eventoTitulo"></span></h4>
                </div>
                <div class="modal-body">
                    <button id="btnDelete" class="btn btn-default btn-sm pull-right">
                        <span class="glyphicon glyphicon-remove"> Remover </span>
                    </button>
                    <button id="btnEditar" class="btn btn-default btn-sm pull-right" style="margin-right:5px;">
                        <span class="glyphicon glyphicon-remove"> Editar </span>
                    </button>
                    <p id="pDetails"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div id="myModalSave" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><span id="eventoTitulo"></span></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" asp-controller="Candidato" asp-action="SaveEvents" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Titulo" placeholder="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                            <input asp-for="Inicio" class="form-control" data-toggle="popover" />
                            <span asp-validation-for="Inicio" class="text-danger"></span>
                            <input asp-for="Fim" placeholder="" class="form-control" />
                            <span asp-validation-for="Fim" class="text-danger"></span>
                            <input asp-for="Descricao" placeholder="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                            <input asp-for="CorEvento" placeholder="cor do evento" class="form-control" />
                            <span asp-validation-for="CorEvento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="text-center">
                                <button type="submit" class="btn btn-default">Guardar Evento</button>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>



</div>



 
    