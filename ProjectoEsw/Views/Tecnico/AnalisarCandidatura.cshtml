                        <input type="checkbox" name="lista" value="Nif" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.NumeroIdentificacao" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7"> @Model.Candidato.Perfil.NumeroIdentificacao</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="NumeroIdentificacao" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.MoradaRua" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7"> @Model.Candidato.Perfil.MoradaRua</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="MoradaRua" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.MoradaCodigoPostal" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.Candidato.Perfil.MoradaCodigoPostal </h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="MoradaCodigoPostal" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.Nacionalidade" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.Candidato.Perfil.Nacionalidade</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="Nacionalidade" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.MoradaConcelho" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.Candidato.Perfil.MoradaConcelho</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="MoradaConcelho" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.MoradaDistrito" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.Candidato.Perfil.MoradaDistrito</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="MoradaDistrito" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.Telefone" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.Candidato.Perfil.Telefone</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="Telefone" />
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <h4>Dados do Contacto em caso de emergencia</h4>

            <div class="col-sm-12">
                <label asp-for="NomeEmergencia" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.NomeEmergencia</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="NomeEmergencia" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="AfiliacaoEmergencia" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.AfiliacaoEmergencia</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="AfiliacaoEmergencia" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12   ">
                <label asp-for="NumeroEmergencia" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.NumeroEmergencia</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="NumeroEmergencia" />
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <h4>Dados Candidatura</h4>
            <div class="col-sm-12">
                <label asp-for="Escola" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.Escola</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="Escola" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="CursoFrequentado" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.CursoFrequentado</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="CursoFrequentado" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="AnoCurricular" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.AnoCurricular</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="AnoCurricular" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Instituicoes" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    
                    @if (Model.Instituicoes == null)
                    {

                        <h5 class="col-sm-7">Sem instituicoes</h5>

                    }
                    else
                    {
                        for (int i =0;i < Model.Instituicoes.Count(); i++){
                            <h5 class="col-sm-7">@Model.Instituicoes.ToList()[i].Instituicao.NomeInstituicao</h5>
                        }
                    }
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="Instituicoes" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Bolsa" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    @if (Model.Bolsa == true)
                    {
                        <h5 class="col-sm-7">Sim</h5>
                    }
                    else
                    {
                        <h5 class="col-sm-7">Não</h5>
                    }
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="Bolsa" />
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <label asp-for="CartaMotivacao" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.CartaMotivacao</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="CartaMotivacao" />
                    </div>
                </div>
            </div>
        </div>
        <button type="submit"  formaction ="RejeitarCandidatura" class="btn btn-default btn-xs center-block col-sm-12">Rejeitar</button>
        <button type="submit"  formaction ="PedirAlteracaoCandidatura" class="btn btn-default btn-xs center-block col-sm-12">Incompleta</button>
        <button type="submit"  formaction ="AprovarCandidatura" class="btn btn-default btn-xs center-block col-sm-12">Aceitar</button>
    </div>
 </form>
