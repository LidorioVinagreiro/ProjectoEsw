                    <h5 class="col-sm-7">@Model.Candidato.Perfil.NomeCompleto</h5> 
                    <div  class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="NomeCompleto" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.DataNasc" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7">@Model.Candidato.Perfil.DataNasc</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="DataNasc" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.Email" class="col-sm-4 control-label"></label>
                <div class="col-sm-offset-4">
                    <h5 class="col-sm-7"> @Model.Candidato.Perfil.Email</h5>
                    <div class="col-sm-offset-11">
                        <input type="checkbox" name="lista" value="Email" />
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <label asp-for="Candidato.Perfil.Nif" class="col-sm-4 control-label"></label>
