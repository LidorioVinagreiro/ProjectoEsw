@model ProjectoEsw.Models.Identity.RegisterViewModel;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<div class="jumbotron col-sm-10 col-sm-offset-1">
    <div class="container col-lg-offset-2 col-sm-8">
        <h2 class="text-center">REGISTO</h2>
        <form class="form-horizontal" asp-controller="Principal" asp-action="Register" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class=" help-block"></div>
                <input asp-for="NomeCompleto" placeholder="Nome Completo" class="form-control" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="DataNasc" class="form-control" />
                <span asp-validation-for="DataNasc" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="NumeroIdentificacao " placeholder="Numero de Identificação" class="form-control" />
                <span asp-validation-for="NumeroIdentificacao" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Telefone" placeholder="Numero de Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Password" placeholder="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="ConfirmPassword" placeholder="Confirmar Password" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <button type="submit" class="btn btn-default">Registar</button>
                </div>
            </div>
        </form>
    </div>
</div>