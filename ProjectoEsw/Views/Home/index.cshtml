@{
    ViewData["Title"] = "Home Page";
}

@section links {
    <a asp-area="" asp-controller="Home" asp-action="RecuperarPassword" class="btn btn-link btn-xs pull-right">Recuperar Password</a>
    <a asp-area="" asp-controller="Home" asp-action="Register" class="btn btn-link btn-xs pull-right">Registar</a>
    <a asp-area="" asp-controller="Home" asp-action="Login" class="btn btn-link btn-xs pull-right">Login</a>
 }
@section Home {
    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
}
@section ProgramasMobilidade{
<a asp-area="" asp-controller="Home" asp-action="ProgramasMobilidade">Programas Mobilidade</a>
}
@section Bolsas{
<a asp-area="" asp-controller="Home" asp-action="Bolsas">Bolsas</a>
}
@section SobreNos{
<a asp-area="" asp-controller="Home" asp-action="SobreNos">Sobre Nós</a>
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="9000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>

    </ol>
    <div class="carousel-inner" role="listbox">
        <img src="~/images/EramusExample.svg" alt="Eramus+" class="img-responsive" />

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@Html.Partial("TempoRestante")

@section HorasFalta{
    <script>
        horas("@System.DateTime.UtcNow");
    </script>

}