@model ProjectoEsw.Models.Identity.RegisterViewModel;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@section links {
    <a asp-area="" asp-controller="Home" asp-action="RecuperarPassword" class="btn btn-link btn-xs pull-right">Recuperar Password</a>
    <a asp-area="" asp-controller="Home" asp-action="Register" class="btn btn-link btn-xs pull-right">Registar</a>
    <a asp-area="" asp-controller="Home" asp-action="Login" class="btn btn-link btn-xs pull-right">Login</a>
}


<div class="jumbotron col-sm-10 col-sm-offset-1">
    <div class="container col-lg-offset-2 col-sm-8">
        <h2 class="text-center">REGISTO</h2>
        <form class="form-horizontal" asp-controller="Home" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class=" help-block"></div>
                <input asp-for="NomeCompleto" placeholder="Nome Completo" class="form-control" data-toggle="popover" data-trigger="hover" data-content="Neste campo é inserido o seu nome pessoal(Joao Soares Inácio)"/>
                <span asp-validation-for="NomeCompleto" class="text-danger" ></span>
                <div class=" help-block"></div>
                <input asp-for="DataNasc" class="form-control"  data-toggle="popover" data-trigger="hover" data-content="Neste campo é onde sera inserido a sua data de nascimento(DD/MM/AAAA)"/>
                <span asp-validation-for="DataNasc" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Nif" placeholder="Numero de Identifição fiscal" class="form-control"  data-toggle="popover" data-trigger="hover" data-content="Neste campo é inserido o seu numero de identificacao fiscal(NIF)"/>
                <span asp-validation-for="Nif" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="NumeroIdentificacao" placeholder="Numero de Identifição" class="form-control"  data-toggle="popover" data-trigger="hover" data-content="Neste campo é inserido o seu numero de identificacao da faculdade(130111222)"/>
                <span asp-validation-for="NumeroIdentificacao" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Telefone" placeholder="Numero de Telefone" class="form-control"  data-toggle="popover" data-trigger="hover" data-content="Neste campo é inserido o seu numero de telemovel(+351969999999)" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Email" placeholder="Email" class="form-control"  data-toggle="popover" data-trigger="hover" data-content="Neste campo é inserido o seu email pessoal(exemplo@exemplo.com) " />
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="Password" placeholder="Password" class="form-control"  data-toggle="popover" data-trigger="hover" data-content="Neste campo é inserido a password para o login(Exemplo12345)">
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class=" help-block"></div>
                <input asp-for="ConfirmPassword" placeholder="Confirmar Password" class="form-control"  data-toggle="popover" data-trigger="hover" data-content="Neste campo é necessario novamente a inserção da password por motivos de seguranca">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <button type="submit" class="btn btn-default">Registar</button>
                </div>
            </div>
        </form>
    </div>
</div>